{
  extends: "airbnb/base",

  env: {
    "browser": true,
    "node": true,
    "es6": true
  },

  parser: "babel-eslint",

  plugins: ["react"],

  ecmaFeatures: {
    "jsx": true,
    "modules": true
  },

  rules: {
    "react/jsx-indent": [2, 4],
    "react/jsx-indent-props": [2, 4],
    "arrow-parens": [0, "as-needed"],
    "indent": [2, 4, {"SwitchCase": 1}],
    "semi" : [2, "always"],
    "space-before-function-paren": 0,
    "object-curly-spacing": 0,
    "jsx-quotes": 0

  }
}
